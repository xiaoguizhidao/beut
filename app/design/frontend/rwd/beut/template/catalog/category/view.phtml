<?php
/**
 * Category view template
 *
 * @see Mage_Catalog_Block_Category_View
 */
?>
<?php
    $_helper    = $this->helper('catalog/output');
    $_category  = $this->getCurrentCategory();
    $_imgHtml   = '';
    $imgThumb ="";
    if ($_imgUrl = $_category->getImageUrl()) {
        $_imgHtml = '<div class="category-image"><img src="'.$_imgUrl.'" alt="'.$this->escapeHtml($_category->getName()).'" title="'.$this->escapeHtml($_category->getName()).'" /><h2>'.$this->escapeHtml($_category->getName()).'</h2></div>';
        $_imgHtml = $_helper->categoryAttribute($_category, $_imgHtml, 'image');
    }
    $imgThumb1 = Mage::getModel('catalog/category')->load($_category->getId())->getThumbnail();
    if($imgThumb1 != ''){
        $imgThumb = Mage::getBaseUrl('media').'catalog/category/'.$imgThumb1;
    }
?>
<?php if($_imgUrl): ?>
    <?php echo $_imgHtml ?>
    <?php else:?>
<div class="category-image">
    <img src="<?php echo $this->getSkinUrl('images/demo/category.png')?>" alt="<?php echo $this->escapeHtml($_category->getName());?>" />
    <h2><?php echo $this->escapeHtml($_category->getName())?></h2>
</div>
<?php endif; ?>

<?php echo $this->getMessagesBlock()->toHtml() ?>

<?php echo $this->getChildHtml("amshopby-navleft"); ?>

<?php if($this->isContentMode()): ?>
    <?php echo $this->getCmsBlockHtml() ?>

<?php elseif($this->isMixedMode()): ?>
    <?php echo $this->getCmsBlockHtml() ?>
    <?php echo $this->getProductListHtml() ?>
<?php else: ?>
    <?php echo $this->getProductListHtml() ?>
<?php endif; ?>
<div class="clearfix"></div>

<div class="category-footer container-fluid">
    <div class="row">
        <div id="move-cat-desc">
        <?php if($_description=$this->getCurrentCategory()->getDescription()): ?>
            <div class="col-lg-<?php echo ($imgThumb != '' )? '8':'12 no-image';?> item category-description std col-xs-12">
                <div class="description">
                    <?php echo $_helper->categoryAttribute($_category, $_description, 'description') ?>
                </div>
            </div>
        <?php endif; ?>
        </div>
        <?php if($imgThumb): ?>
            <div id="move-cat-desc-img" class="<?php echo ($_description == '' )? 'col-lg-12 thumb-full':' col-lg-4';?> item thumb">
                <img src="<?php echo $imgThumb ?>" alt="<?php echo $this->escapeHtml($_category->getName()) ?>" class="f-right" />
            </div>
        <?php endif; ?>
        <div class="clearfix"></div>
    </div>
</div>

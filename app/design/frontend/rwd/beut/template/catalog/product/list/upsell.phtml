<?php if(count($this->getItemCollection()->getItems())): ?>
<?php $_columnCount = $this->getColumnCount(); ?>
<div class="box-collateral box-up-sell">
    <h2><?php echo $this->__('What we find (Beut.) iful this month')?>
       <a href="#" class="view-more"><?php echo $this->__('Shop more') ?></a>
    </h2>
    <div id="upsell-product-table" class="upsell-product-table ">
        <div class="row" id="lightSlider">
           <?php foreach ($this->getItemCollection()->getItems() as $_link): ?>

                <div class="square-container">
                    <a href="<?php echo $_link->getProductUrl() ?>" title="<?php echo $this->escapeHtml($_link->getName()) ?>" class="product-image">
                        <img src="<?php echo $this->helper('catalog/image')->init($_link, 'small_image')->resize(135) ?>" alt="<?php echo $this->escapeHtml($_link->getName()) ?>" />
                    </a>
                    <?php
                    $productManufacture = $_link->getAttributeText('manufacturer');
                    if ($productManufacture !="") :
                    ?>
                    <div class="product-brand"><?php echo $productManufacture; ?></div>
                    <?php endif; ?>

                    <h4><?php echo $_link->getAttributeText('brands');?></h4>
                    <h3 class="product-name"><a href="<?php echo $_link->getProductUrl() ?>" title="<?php echo $this->escapeHtml($_link->getName()) ?>"><?php echo $this->escapeHtml($_link->getName()) ?></a></h3>
                    <?php echo $this->getPriceHtml($_link, true, '-upsell') ?>
                    <?php echo $this->getReviewsSummaryHtml($_link) ?>
                </div>

           <?php endforeach; ?>
        </div>
    </div>


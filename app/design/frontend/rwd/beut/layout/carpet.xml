<?xml version="1.0"?>
<layout version="0.1.0">
    <catalog_product_view>
        <!-- <reference name="head">
            <action method="addItem"><type>skin_css</type><name>css/carpet/skin.css</name></action>
        </reference> -->    
        <reference name="product.info">
        	<action method="setTemplate"><template>carpet/product-view.phtml</template></action>
            <block type="catalog/product_view_attributes" name="product.attributes" as="attributes" template="easytabs/attributes.phtml"></block>
            <block type="catalog/product_view_description" name="product.description" as="description" template="easytabs/description.phtml"> </block>

        </reference> 
        <reference name="product.info.options">
        	<action  method="addOptionRenderer"><type>text</type><block>catalog/product_view_options_type_text</block><template>carpet/text.phtml</template></action> 
        </reference>
        <reference name="product.info.options.wrapper.bottom">
        	 <block  type="catalog/product_view" name="bs.init" template="carpet/init.phtml"/>
        </reference>
        <reference name="product.info.options.wrapper">
        	<block  type="catalog/product_view" name="bs.calc" after="-" template="carpet/calc.phtml"/>
        </reference>
        <block type="catalog/product_list_upsell" name="product.info.upsell" as="upsell_products" template="catalog/product/list/upsell.phtml">
            <action method="setColumnCount"><columns>12</columns></action>
            <action method="setItemLimit"><type>upsell</type><limit>12</limit></action>
        </block>
        <block type="catalog/product_list_related" name="catalog.product.related" as="related_products" template="catalog/product/list/related.phtml" />



    </catalog_product_view>
</layout> 
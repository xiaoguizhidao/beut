<widgets>
    <popupwidgets_youtubeplayer type="popupwidgets/youtubeplayer" translate="name description" module="popupwidgets">
        <name>TRM Marketing - You Tube Player for Magento Pop-up</name>
        <description>Adds a You Tube player for use in Magento Pop-ups extension</description>
        <parameters>
			<youtubeid translate="label">
                <visible>1</visible>
                <label>YouTube Video ID</label>
                <description>YouTube Video ID: Example XXXXXX is the ID http://youtu.be/XXXXXX </description>
                <type>text</type>
            </youtubeid>
			<videowidth translate="label">
                <visible>1</visible>
                <label>Width</label>
                <description>Width of video, Example: 720</description>
                <type>text</type>
            </videowidth>
			<videoheight translate="label">
                <visible>1</visible>
                <label>Height</label>
                <description>Height of video, Example: 480</description>
                <type>text</type>
            </videoheight>
			<videoautoplay translate="label">
			<visible>1</visible>
                <label>Autoplay Video</label>
                <type>select</type>
                <values>
                    <no translate="label">
                        <value>0</value>
                        <label>No</label>
                    </no>
					<yes translate="label">
                        <value>1</value>
                        <label>Yes</label>
                    </yes>
                </values>
            </videoautoplay>
            <template translate="label" value="">
                <label>Frontend Template</label>
                <visible>1</visible>
                <required>1</required>
                <type>select</type>
                <values>
                    <list translate="label">
                        <value>popupwidgets/youtubeplayer.phtml</value>
                        <label>Standard YouTube Player</label>
                    </list>
                </values>
            </template>
        </parameters>
    </popupwidgets_youtubeplayer>

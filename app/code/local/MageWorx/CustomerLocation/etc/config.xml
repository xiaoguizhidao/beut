<?xml version="1.0"?>

<config>
    <modules>
        <MageWorx_CustomerLocation>
            <version>1.1.2</version>
        </MageWorx_CustomerLocation>
    </modules>

    <global>
        <blocks>
            <geolocation>
                <class>MageWorx_CustomerLocation_Block</class>
            </geolocation>
        </blocks>
        <helpers>
            <geolocation>
                <class>MageWorx_CustomerLocation_Helper</class>
            </geolocation>
        </helpers>
        <models>
            <geolocation>
                <class>MageWorx_CustomerLocation_Model</class>
            </geolocation>
        </models>
    </global>

    <adminhtml>
        <translate>
            <modules>
                <MageWorx_CustomerLocation>
                    <files>
                        <default>MageWorx_CustomerLocation.csv</default>
                    </files>
                </MageWorx_CustomerLocation>
            </modules>
        </translate>
        <events>
            <core_block_abstract_to_html_before>
                <observers>
                    <geolocation_order>
                        <type>singleton</type>
                        <class>geolocation/observer</class>
                        <method>orderLocation</method>
                    </geolocation_order>
                    <geolocation_online_customer>
                        <type>singleton</type>
                        <class>geolocation/observer</class>
                        <method>onlineCustomerLocation</method>
                    </geolocation_online_customer>
                </observers>
            </core_block_abstract_to_html_before>
        </events>
        <acl>
            <resources>
                <admin>
                    <children>
                        <system>
                            <children>
                                <config>
                                    <children>
                                        <mageworx_customers>
                                            <children>
                                                <geolocation translate="title" module="geolocation">
                                                    <title>GeoIP Location</title>
                                                </geolocation>
                                            </children>
                                        </mageworx_customers>
                                    </children>
                                </config>
                            </children>
                        </system>
                    </children>
                </admin>
            </resources>
        </acl>
    </adminhtml>

    <default>
        <mageworx_customers>
            <geolocation>
                <enable_orders>1</enable_orders>
                <enable_online_customers>1</enable_online_customers>
            </geolocation>
        </mageworx_customers>
    </default>
</config>
<?xml version="1.0"?>
<config>
	<modules>
		<Eisbehr_TwitterBox>
			<version>0.1.0</version>
		</Eisbehr_TwitterBox>
	</modules>
	<global>
		<models>
			<twitterbox>
        		<class>Eisbehr_TwitterBox_Model</class>
			</twitterbox>
		</models>
	    <blocks>
            <twitterbox>
                <class>Eisbehr_TwitterBox_Block</class>
            </twitterbox>
        </blocks>
		<helpers>
            <twitterbox>
                <class>Eisbehr_TwitterBox_Helper</class>
            </twitterbox>
        </helpers>
	</global>
	<frontend>	  
		<layout>
			<updates>
				<twitterbox>
					<file>twitterbox.xml</file>
				</twitterbox>
            </updates>
        </layout>
		<translate>
			<modules>
				<Eisbehr_TwitterBox>
					<files>
						<default>Eisbehr_TwitterBox.csv</default>
					</files>
				</Eisbehr_TwitterBox>
			</modules>
		</translate>
	</frontend>
	<adminhtml>
		<acl>
            <resources>
                <admin>
                    <children>
                        <system>
                            <children>
                                <config>
                                    <children>
                                        <twitterbox translate="title" module="twitterbox">
                                            <title>Eisbehr Twitter Box</title>
                                            <sort_order>100</sort_order>
                                        </twitterbox>
                                    </children>
                                </config>
                            </children>
                        </system>
                    </children>
                </admin>
            </resources>
        </acl>
    </adminhtml>
</config>
												$('amconf_lightbox_enable').setValue(0);
                                                $('amconf_lightbox_thumbnail_lignhtbox').setValue(0);

                                            }
                                            else{
                                                $('amconf_size-state').parentNode.show();
                                                $('amconf_zoom-state').parentNode.show();
                                                $('amconf_zoom_settings-state').parentNode.show();
                                                $('amconf_lightbox-state').parentNode.show();
                                                $('amconf_carousel-state').parentNode.show();
                                            }
                                        } 
                                        Event.observe(window, 'load', function() {
                                            Event.observe('amconf_general_use_zoom_lightbox', 'change', checkEnableAll);
                                            checkEnableAll();
                                        })
                                    </script>

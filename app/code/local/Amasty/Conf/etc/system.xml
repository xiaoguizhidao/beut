							 <comment><![CDATA[
                                    <script type="text/javascript">
                                        checkEnableAll = function() {
                                            if ($('amconf_general_use_zoom_lightbox').getValue() == 0) {
                                                $('amconf_size-state').parentNode.hide();
                                                $('amconf_zoom-state').parentNode.hide();
                                                $('amconf_zoom_settings-state').parentNode.hide();
                                                $('amconf_lightbox-state').parentNode.hide();
                                                $('amconf_carousel-state').parentNode.hide();

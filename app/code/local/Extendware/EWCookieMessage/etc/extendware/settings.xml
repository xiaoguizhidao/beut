<?xml version="1.0"?>
<config>
	<modules>
        <Extendware_EWCookieMessage>
        	<extendware>
	        	<settings>
	        		<scopes>
		        		<main>
							<tabs>
						        <main translate="label comment ewhelp" module="ewcookiemessage">
						            <label>Cookie Message</label>
						            <sort_order>100</sort_order>
						        </main>
						    </tabs>
							<sections>
								<ewcookiemessage translate="label comment ewhelp" module="ewcookiemessage">
									<class>separator-top</class>
									<label>General</label>
									<tab>main</tab>
									<frontend_type>text</frontend_type>
									<sort_order>100</sort_order>
									<show_in_default>1</show_in_default>
									<show_in_website>0</show_in_website>
									<show_in_store>0</show_in_store>
									<groups>
										<general translate="label comment ewhelp" module="ewcookiemessage">
						                    <label>General</label>
						                    <frontend_type>text</frontend_type>
						                    <sort_order>100</sort_order>
						                    <show_in_default>1</show_in_default>
						                    <show_in_website>1</show_in_website>
						                    <show_in_store>1</show_in_store>
						                    <fields>
						                    	<enabled translate="label comment ewhelp">
						                            <label>Status</label>
						                            <frontend_type>select</frontend_type>
						                            <source_model>ewcore/adminhtml_config_data_option_enabledisable</source_model>
						                            <sort_order>1</sort_order>
						                            <show_in_default>1</show_in_default>
						                            <show_in_website>0</show_in_website>
						                            <show_in_store>0</show_in_store>
						                            <comment><![CDATA[Enable or disable auto switching]]></comment>
						                        </enabled>
						                        <ip_mode translate="label comment ewhelp">
						                            <label>IP Mode</label>
						                            <frontend_type>select</frontend_type>
						                            <source_model>ewcookiemessage/adminhtml_config_data_option_ipmode</source_model>
						                            <sort_order>10</sort_order>
						                            <show_in_default>1</show_in_default>
						                            <show_in_website>0</show_in_website>
						                            <show_in_store>0</show_in_store>
						                            <comment><![CDATA[<b>Note: </b> If you are using a proxy to test the cookie message, then Requesting IP must be selected.]]></comment>
						                        </ip_mode>
											</fields>
										</general>
									</groups>
								</ewcookiemessage>
							</sections>
						</main>
					</scopes>
				</settings>
			</extendware>
		</Extendware_EWCookieMessage>
	</modules>
</config>

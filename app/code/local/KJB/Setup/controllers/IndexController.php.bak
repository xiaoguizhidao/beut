class KJB_Setup_IndexController extends Mage_Core_Controller_Front_Action
{
    /**
     * Index action
     */
    public function indexAction()
    {
        $productList = Mage::getModel('catalog/product')->getCollection();
        $arrayMap = array(248=>265,232=>266,246=>267,247=>268,234=>269,243=>270,245=>271,244=>272);
		$arrayMap2 = array(251=>273,131=>274,132=>275,134=>276,138=>277,135=>278,222=>279,250=>280,136=>281,233=>282,123=>283,249=>283,143=>284,137=>285);
        if ($productList->getSize()) {
            $i =0;
            foreach($productList as $product) {
                $productDetail = Mage::getModel('catalog/product')->load($product->getId());
				if ($productDetail->getBrand()) {
					$i++;
					$brands = $arrayMap[$productDetail->getBrand()];
					$productDetail->setBrands($brands);
					echo $productDetail->getId()."/".$productDetail->getBrand() . "/" . $arrayMap[$productDetail->getBrand()] . "<br>";                       
				}
				if ($productDetail->getMaterial()) {
					 $meterials = $arrayMap2[$productDetail->getMaterial()];
					 $productDetail->setMaterials($meterials);
					 echo "meterial: ".$productDetail->getId()."/".$productDetail->getMaterial(). "/" . $arrayMap2[$productDetail->getMaterial()] . "<br>";
				}
				$productDetail->save();
            }
            echo $i;
        }
    }

}

